<Window x:Class="ArduinoDashboardInterpreter.WaitForKey"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArduinoDashboardInterpreter"
        mc:Ignorable="d"
        Title="Keyboard shortcut" Height="150" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" KeyUp="Window_KeyUp">
    <Grid>
        <Label HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock TextAlignment="Center" FontSize="16">
                Press any key<LineBreak/><LineBreak/>
                Press ESC to cancel this operation
            </TextBlock>
        </Label>
    </Grid>
</Window>
